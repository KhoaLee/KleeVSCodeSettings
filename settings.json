  "vim.operatorPendingModeKeyBindings": [
    // Bind L to $ and H to ^ in operator pending mode
    // makes yL and dH work like y$ and d^ respectively:
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    }
  ],
  // Insert Mode Keybindings Non Recursive
